generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int           @id @default(autoincrement())
  code         String        @unique
  name         String
  description  String
  category     String
  stock        Int
  unit         String
  cost         Float
  markup       Float
  minStock     Int
  remaining    Int
  sellingPrice Float
  purchaseDate DateTime
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  consumption  Consumption[]
}

model Consumption {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
  quantity  Int
  type      String
  consumer  String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
